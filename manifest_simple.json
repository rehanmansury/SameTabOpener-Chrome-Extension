{
  "manifest_version": 3,
  "name": "SameTabOpener (Simple)",
  "version": "1.3.0",
  "description": "Simple Zendesk tab reuse without interference.",
  "background": {
    "service_worker": "javascripts/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "SameTabOpener"
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "https://*.zendesk.com/*",
    "http://*.zendesk.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
